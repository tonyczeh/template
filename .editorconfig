# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.html]
indent_size = 2

[*.rst]
max_line_length = 80

[*.py]
max_line_length = 120
